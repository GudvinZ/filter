    <servlet>
        <servlet-name>user</servlet-name>
        <jsp-file>/WEB-INF/jsp/user.jsp</jsp-file> <!-- Your JSP. Must begin with '/' -->
    </servlet>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/user/*</url-pattern> <!-- Any URL you want here -->
    </servlet-mapping>

    <servlet>
        <servlet-name>noAccess</servlet-name>
        <jsp-file>/WEB-INF/jsp/noAccess.jsp</jsp-file> <!-- Your JSP. Must begin with '/' -->
    </servlet>
    <servlet-mapping>
        <servlet-name>noAccess</servlet-name>
        <url-pattern>/noAccess</url-pattern> <!-- Any URL you want here -->
    </servlet-mapping>

    <servlet>
        <servlet-name>redirect</servlet-name>
        <jsp-file>/WEB-INF/jsp/redirect.jsp</jsp-file> <!-- Your JSP. Must begin with '/' -->
    </servlet>
    <servlet-mapping>
        <servlet-name>redirect</servlet-name>
        <url-pattern>/redirect</url-pattern> <!-- Any URL you want here -->
    </servlet-mapping>

